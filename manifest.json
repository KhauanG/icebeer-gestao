{
  "name": "Ice Beer - Sistema de Gestão v4.0",
  "short_name": "Ice Beer",
  "description": "Sistema completo de controle de vendas e metas para o Grupo Ice Beer",
  "version": "4.0.2",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#667eea",
  "scope": "/",
  "lang": "pt-BR",
  
  "icons": [
    {
      "src": "/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  "categories": [
    "business",
    "productivity",
    "finance"
  ],

  "shortcuts": [
    {
      "name": "Lançar Vendas",
      "short_name": "Vendas",
      "description": "Acesso rápido ao lançamento de vendas",
      "url": "/?action=sales",
      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Definir Metas",
      "short_name": "Metas", 
      "description": "Configurar metas mensais e semanais",
      "url": "/?action=targets",
      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Relatórios",
      "short_name": "Relatórios",
      "description": "Visualizar relatórios e análises",
      "url": "/?action=reports",
      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],

  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/csv", ".csv", "application/vnd.ms-excel", ".xlsx"]
        }
      ]
    }
  },

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "handle_links": "preferred",

  "permissions": [
    "storage",
    "notifications",
    "background-sync"
  ],

  "prefer_related_applications": false,

  "id": "ice-beer-gestao-v4",
  "dir": "ltr"
}